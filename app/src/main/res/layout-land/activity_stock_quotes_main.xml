<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                tools:context="edu.cofc.csci490.stockquotes_rugema.StockQuotesMainActivity">

    <TextView
        android:id="@+id/symblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symbol_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignTop="@+id/symbolNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/symbolNameText"
        android:layout_width="190dp"
        android:layout_height="41dp"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/symbolTextID"
        android:layout_toEndOf="@+id/symbolTextID"/>

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/symbol"
        android:layout_alignBaseline="@+id/symbolTextID"
        android:layout_alignBottom="@+id/symbolTextID"
        android:layout_alignRight="@+id/symblName"
        android:layout_alignEnd="@+id/symblName"/>

    <TextView
        android:id="@+id/nameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"

        android:layout_below="@+id/symbol"
        android:layout_alignRight="@+id/symbol"
        android:layout_alignEnd="@+id/symbol"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tradePriceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trade_price"
        android:layout_below="@+id/nameID"
        android:layout_alignRight="@+id/nameID"
        android:layout_alignEnd="@+id/nameID"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/lastTradeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trade_time"
        android:layout_below="@+id/tradePriceID"
        android:layout_alignRight="@+id/tradePriceID"
        android:layout_alignEnd="@+id/tradePriceID"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change"
        android:layout_below="@+id/lastTradeTime"
        android:layout_alignRight="@+id/lastTradeTime"
        android:layout_alignEnd="@+id/lastTradeTime"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/weekRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_range"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/change"
        android:layout_alignRight="@+id/change"
        android:layout_alignEnd="@+id/change"/>

    <TextView
        android:id="@+id/symbolTextID"
        android:text="@string/symbol_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/symbolNameText"
        android:layout_toEndOf="@+id/symbol"
        android:layout_toRightOf="@+id/symbol"
        />

    <TextView
        android:id="@+id/nameTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameID"
        android:layout_toRightOf="@+id/nameID"
        android:text="@string/name_txt"/>

    <TextView
        android:id="@+id/lastTradePriceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tradePriceID"
        android:layout_toEndOf="@+id/tradePriceID"
        android:layout_toRightOf="@+id/tradePriceID"
        android:text="@string/last_trade_price_txt"/>

    <TextView
        android:id="@+id/lastTradeTimeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastTradeTime"
        android:layout_toRightOf="@+id/lastTradeTime"
        android:text="@string/last_trade_time_txt"/>

    <TextView
        android:id="@+id/changeTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_txt"
        android:layout_alignBaseline="@+id/change"
        android:layout_toRightOf="@+id/change"/>

    <TextView
        android:id="@+id/weekRangeTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_range_txt"
        android:layout_alignBaseline="@+id/weekRange"
        android:layout_toRightOf="@+id/weekRange"/>

    <Button
        android:id="@+id/stockQuoteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/get_stock_quote"
        android:layout_below="@+id/weekRange"
        android:layout_toRightOf="@+id/weekRange"
        android:layout_toEndOf="@+id/weekRange"/>

</RelativeLayout>